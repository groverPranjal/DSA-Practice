class Solution {
    public int orangesRotting(int[][] grid) {
        Queue<int[]> q=new ArrayDeque<>();
        for(int i=0;i<grid.length;i++){
            for(int j=0;j<grid[0].length;j++){
                if(grid[i][j]==2) q.add(new int[]{i,j,0});
            }
        }
        int ans=0;
        while(!q.isEmpty()){
            int[] temp=q.poll();
            int i=temp[0];
            int j=temp[1];
            int time=temp[2];
            ans=Math.max(ans,time);
            int[][] dir={{1,0},{0,-1},{-1,0},{0,1}};
            for(int[] d:dir){
                int newRow=i+d[0];
                int newCol=j+d[1];
                if(isValid(newRow,newCol,grid.length,grid[0].length) && grid[newRow][newCol]==1){
                    q.add(new int[]{newRow,newCol,time+1});
                    grid[newRow][newCol]=2;
                }
            }
        }
        for(int i=0;i<grid.length;i++){
            for(int j=0;j<grid[0].length;j++) if(grid[i][j]==1) return -1;
        }
        return ans;
    }
    public boolean isValid(int i,int j,int m,int n){
        if(i<0 || j<0 || j>=n || i>=m) return false;
        return true;
    }
}
