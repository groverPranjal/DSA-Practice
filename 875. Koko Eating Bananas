class Solution {
    public int minEatingSpeed(int[] piles, int h) {
       int n=piles.length;
       int max=0;
       for(int i:piles) max=Math.max(max,i);
       int left=1; int right=max;
       while(left<right){
        int mid=left+(right-left)/2;
        long hrs=0;
        for(int i:piles) hrs+=(i+mid-1)/mid;
        if(hrs<=h){
            right=mid;
        }
        else left=mid+1;
       } 
       return left;
    }
}
