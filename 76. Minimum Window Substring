class Solution {
    public String minWindow(String s, String t) {
        int n=s.length();
        int m=t.length();
        if(m>n) return "";
        Map<Character,Integer> map=new HashMap<>();
        for(char c:t.toCharArray()) map.put(c,map.getOrDefault(c,0)+1);
        int windowSize=Integer.MAX_VALUE;
        int i=0,j=0;
        int start=0;
        while(j<n){
            char ch=s.charAt(j);
            if(map.containsKey(ch) && map.get(ch)>0) m--;
            map.put(ch,map.getOrDefault(ch,0)-1);
            while(m==0){
                int curSize=j-i+1;
                if(windowSize>curSize){
                    windowSize=curSize;
                    start=i;
                }
                char startChar=s.charAt(i);
                map.put(startChar,map.getOrDefault(startChar,0)+1);
                if(map.containsKey(startChar) && map.get(startChar)>0) m++;
                i++;
            }
            j++;
        }
        return windowSize==Integer.MAX_VALUE?"":s.substring(start,start+windowSize);
    }
}
