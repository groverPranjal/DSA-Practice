/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public int kthSmallest(TreeNode root, int k) {
        int[] count=new int[1];
        int[] res=new int[1];
        solve(count,res,root,k);
        return res[0];
    }
    public void solve(int[] count,int[] res,TreeNode root,int k){
        if(root==null) return ;
        solve(count,res,root.left,k);
        count[0]++;
        if(count[0]==k) {
            res[0]=root.val;
            return;
        }
        solve(count,res,root.right,k);
    }
}
