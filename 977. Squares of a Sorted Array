Approch 1: TC=(n log n)
class Solution {
    public int[] sortedSquares(int[] nums) {
        for(int i=0;i<nums.length;i++){
            nums[i]=nums[i]*nums[i];
        }
        Arrays.sort(nums);
        return nums;
    }
}
Approch 2: TC(log n)
class Solution {
    public int[] sortedSquares(int[] nums) {
        int n=nums.length;
        int[] res=new int[n];
        int left=0;
        int right=n-1;
        int idx=n-1;
        while(left<=right){
            int leftsq=nums[left]*nums[left];
            int rightsq=nums[right]*nums[right];
            if(leftsq>rightsq){
                res[idx--]=leftsq;
                left++;
            }
            else{
                res[idx--]=rightsq;
                right--;
            }
        }
        return res;
    }
}
