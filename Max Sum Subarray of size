class Solution {
    public int maxSubarraySum(int[] arr, int k) {
        // Code here
        int sum=0;
        for(int i=0;i<k;i++){
            sum+=arr[i];
        }
        int max=sum;
        int j=0;
        for(int i=k;i<arr.length;i++){
            sum+=arr[i];
            sum-=arr[j];
            j++;
            max=Math.max(sum,max);
        }
        return max;
    }
}
