Approch 1:
class Solution {
    public boolean isHappy(int n) {
        HashSet<Integer>set=new HashSet<>();
        while(n!=1 && !set.contains(n)){
            set.add(n);
            n=sq(n);
        }
        return n==1;
    }
    public int sq(int n){
        int sum=0;
        while(n>0){
            int rem=n%10;
            sum+=rem*rem;
            n/=10;
        }
        return sum;
    }
}
Approch 2: Using Slow fast Pointer
class Solution {
    public boolean isHappy(int n) {
       int slow=sq(n);
       int fast=sq(sq(n));
       while(slow!=fast){
        slow=sq(slow);
        fast=sq(sq(fast));
        if(fast==1 || slow==1) return true;
       }
       return slow==1;
    }
    public int sq(int n){
        int sum=0;
        while(n>0){
            int rem=n%10;
            sum+=rem*rem;
            n/=10;
        }
        return sum;
    }
}
