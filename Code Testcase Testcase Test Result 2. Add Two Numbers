
class Solution {
    public ListNode addTwoNumbers(ListNode p, ListNode q) {
        ListNode dummy=new ListNode(-1);
        ListNode ans=dummy;
        int carry=0;
        while(p!=null || q!=null){
            int x=(p!=null)?p.val:0;
            int y=(q!=null)?q.val:0;
            int sum=x+y+carry;
            ans.next=new ListNode(sum%10);
            ans=ans.next;
            carry=sum/10;
            if(p!=null) p=p.next;
            if(q!=null) q=q.next;
        }
        if(carry>0) ans.next=new ListNode(carry);
        return dummy.next;
    }
}
