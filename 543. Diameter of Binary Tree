
class Solution {
    int dia=0;
    public int diameterOfBinaryTree(TreeNode root) {
        height(root);
        return dia;
    }
    public int height(TreeNode root){
        if(root==null) return 0;
        int hl=height(root.left);
        int hr=height(root.right);
        dia=Math.max(dia,hl+hr);
        return 1+Math.max(hl,hr);
    }
}
