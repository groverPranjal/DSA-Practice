class Solution {
    public int threeSumClosest(int[] nums, int target) {
        Arrays.sort(nums);
        int n=nums.length;
        int clsum=nums[0]+nums[1]+nums[2];
        for(int i=0;i<n-2;i++){
            int left=i+1;
            int right=n-1;
            while(left<right){
                int curSum=nums[i]+nums[left]+nums[right];
                if(Math.abs(target-clsum)>Math.abs(target-curSum)){
                    clsum=curSum;
                }
                if(curSum<target) left++;
                else if(curSum>target) right--;
                else return target;
            }
        }
        return clsum;
    }
}
